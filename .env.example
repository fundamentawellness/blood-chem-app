# Server Configuration
NODE_ENV=development
PORT=3001
CLIENT_URL=http://localhost:3000

# Database Configuration (PostgreSQL)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=hipaa_healthcare_db
DB_USER=your_db_user
DB_PASSWORD=your_secure_password
DATABASE_URL=postgresql://your_db_user:your_secure_password@localhost:5432/hipaa_healthcare_db

# JWT Configuration
JWT_SECRET=your_super_secure_jwt_secret_key_here_make_it_long_and_random
JWT_EXPIRES_IN=8h
JWT_REFRESH_SECRET=your_refresh_token_secret_key_here
JWT_REFRESH_EXPIRES_IN=7d

# Encryption Keys (Generate these securely)
ENCRYPTION_KEY=your_32_character_encryption_key_here
ENCRYPTION_IV=your_16_character_iv_here

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads
ALLOWED_FILE_TYPES=pdf,doc,docx,xlsx,xls,jpg,jpeg,png

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_specific_password
EMAIL_FROM=noreply@yourhealthcareapp.com

# Security Configuration
SESSION_SECRET=your_session_secret_key_here
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100

# HIPAA Compliance Settings
AUDIT_LOG_ENABLED=true
AUTO_LOGOUT_MINUTES=30
PASSWORD_MIN_LENGTH=12
REQUIRE_MFA=false
ENCRYPTION_ALGORITHM=aes-256-gcm

# Cloud Storage (Optional - for production)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=your-hipaa-compliant-bucket

# Monitoring and Logging
LOG_LEVEL=info
SENTRY_DSN=your_sentry_dsn_here

# Development Settings
DEBUG=true
CORS_ORIGIN=http://localhost:3000